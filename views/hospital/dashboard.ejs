<!DOCTYPE html>
<html>
<head>
  <title>Hospital Dashboard</title>
  <link rel="stylesheet" type="text/css" href="/css/styles.css">
</head>
<body>
  <h1>Hospital Dashboard</h1>

  <!-- Search Form -->
  <form action="/hospital/dashboard" method="GET" style="margin-bottom: 20px;">
    <label for="bloodgroup">Filter by Blood Group:</label>
    <select name="bloodgroup" id="bloodgroup">
      <option value="">All Blood Groups</option>
      <option value="A+">A+</option>
      <option value="A-">A-</option>
      <option value="B+">B+</option>
      <option value="B-">B-</option>
      <option value="AB+">AB+</option>
      <option value="AB-">AB-</option>
      <option value="O+">O+</option>
      <option value="O-">O-</option>
    </select>

    <label for="area">Filter by Area:</label>
    <input type="text" name="area" placeholder="Enter Area">
    <button type="submit">Search</button>
  </form>

  <!-- Upload Patient Form -->
  <h1>Upload Donors</h1>
  <form action="/hospital/upload-patient" method="POST" style="margin-bottom: 20px;">
    <input type="text" name="name" placeholder="Patient Name" required>
    <label for="bloodgroup">Blood Group:</label>
    <select name="bloodgroup" id="bloodgroup" required>
      <option value="A+">A+</option>
      <option value="A-">A-</option>
      <option value="B+">B+</option>
      <option value="B-">B-</option>
      <option value="AB+">AB+</option>
      <option value="AB-">AB-</option>
      <option value="O+">O+</option>
      <option value="O-">O-</option>
    </select>
    <input type="text" name="phone" placeholder="Patient Phone" required>
    <input type="text" name="area" placeholder="Patient Area" required>
    <button type="submit">Upload Patient</button>
  </form>

  <!-- Display Patients -->
  <h2 style="margin-left: 35%;">Patients</h2>
  <% patients.forEach(patient => { %>
    <div>
      <p><%= patient.name %> - <%= patient.bloodgroup %> - <%= patient.area %> - <%= patient.phone %> - <%= patient.status %></p>
    </div>
  <% }) %>
</body>
</html>
